{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "declaration": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "lib": ["esnext"],
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "paths": {"deepl-node": ["."]},
    "skipLibCheck": true,
    "strict": true,
    "types": ["node", "jest"],
    "module": "commonjs",
    "outDir": "dist",
    "target": "es2016"
  },
  "compileOnSave": false,
  "exclude": [
    "tests",
    "dist",
    "node_modules"],
  "include": [
    "src"
  ]
}
